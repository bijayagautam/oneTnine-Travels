<div>
    <form method="POST" action="/room/search" class="room-search-area">
        <div>
            <label for="city"></label>
            <li>
                <select name="city" class="form-dropdown">
                    <option value="" selected>Search by location</option>
                    <option value="Toronto">Toronto</option>
                    <option value="Mississauga">Mississauga</option>
                    <option value="Oakville">Oakville </option>
                    <option value="Richmond Hill">Richmond Hill</option>
                    <option value="Calgary">Calgary</option>
                </select>
            </li>
        </div>
        <div>
            <input type="submit" value="Search" class="form-button">
        </div>
    </form>
</div>

<section class="room-list">
    {{#each data }}
        <article class="room">
            <header>
                <a href="#"><img src="/img/uploads/{{this.roomImage}}"></a>
            </header>
            <a href="#"><h3>{{this.name}}</h3></a>
            <div class="price-rating">
                <h4>${{this.price}} CAD/night</h4>
                <sub>{{this.roomLocation}}</sub>
            </div>            
        </article>
    {{/each}}

    {{#unless data}}
    <div class="records-not-found">
        <hr>
        <h3>Room is not available for this location</h3>
        <p>Please try another City</p>
        <hr>
    </div>
    {{/unless}} 
</section>

  