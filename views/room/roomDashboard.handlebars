<section>
    <h1>Welcome to Dashboard {{user}} !</h1>
    <div class="room-search">
        <li class="search-drop">
            <label for="city"></label>
            <select name="city" class="form-dropdown">
                <option value="" selected>Please select city you want travel</option>
                <option value="Brampton">Brampton</option>
                <option value="Oakville">Oakville </option>
                <option value="Richmond Hill">Richmond Hill</option>
                <option value="Toronto">Toronto</option>
                <option value="Calgary">Calgary</option>
            </select>
        </li>
        <div class="searchBtn">
            <button class="search-button">SEARCH</button>
        </div>

    </div>

    <div class="crud-form">
        <article class="form">
            <a href="#" id="modifyRoom" class="form-header"><h1>Modify Room</h1></a>
            <div id="modifyRoomForm">

                {{!-- <div>
                    <input type="submit" value="Update Room" class="form-button">
                </div> --}}
                <table class="room-info-table">
                    <thead>
                        <tr>
                            <th>Room ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Room Location</th>
                            <th>Room Type</th>
                            <th>Room Image</th>
                            <th colspan="2">Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.price}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.roomLocation}}</td>
                            <td>{{this.roomType}}</td>
                            <td>{{this.roomImage}}</td>
                            <td><a href="/room/edit/{{this.id}}" class="search-button">Update</a></td>
                            <td><a href="/room/delete/{{this.id}}?method=DELETE" class="search-button">Delete</a></td>
                        </tr>

                        {{else}}
                        <td colspan="9">
                            <p>No Room in Database</p>
                        </td>
                        {{/each}}

                        
                    </tbody>
                </table>
            </div>
        </article> 
    </div>
</section>

